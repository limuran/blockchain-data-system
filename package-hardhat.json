{
  "name": "blockchain-data-system",
  "version": "2.0.0",
  "type": "module",
  "description": "🚀 现代化区块链数据系统 - React + Webpack + Hardhat",
  "keywords": ["blockchain", "ethereum", "react", "web3", "dapp", "hardhat"],
  "main": "src/index.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production", 
    "start": "npm run dev",
    "test": "jest",
    "contract:compile": "hardhat compile",
    "contract:test": "hardhat test",
    "contract:deploy": "hardhat run scripts/deploy-contract.js --network sepolia",
    "contract:deploy-local": "hardhat run scripts/deploy-contract.js --network localhost",
    "contract:verify": "hardhat verify --network sepolia",
    "contract:node": "hardhat node"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ethers": "^6.15.0",
    "lucide-react": "^0.263.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0", 
    "@babel/preset-react": "^7.22.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "html-webpack-plugin": "^5.5.3",
    "tailwindcss": "^3.3.5",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.0",
    "chai": "^4.3.8"
  }
}